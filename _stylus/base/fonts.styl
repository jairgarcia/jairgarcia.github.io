
	@import url('https://fonts.googleapis.com/css?family=Montserrat:400,700');

	@font-face {
	    font-family: 'jgarcia';
	    src:    url('../fonts/jgarcia.eot?e813jr');
	    src:    url('../fonts/jgarcia.eot?e813jr#iefix') format('embedded-opentype'),
	        url('../fonts/jgarcia.ttf?e813jr') format('truetype'),
	        url('../fonts/jgarcia.woff?e813jr') format('woff'),
	        url('../fonts/jgarcia.svg?e813jr#jgarcia') format('svg');
	    font-weight: normal;
	    font-style: normal;
	}

	i {
	    /* use !important to prevent issues with browser extensions that change fonts */
	    font-family: 'jgarcia' !important;
	    speak: none;
	    font-style: normal;
	    font-weight: normal;
	    font-variant: normal;
	    text-transform: none;
	    line-height: 1;

	    /* Better Font Rendering =========== */
	    -webkit-font-smoothing: antialiased;
	    -moz-osx-font-smoothing: grayscale;
	}

	.icon-linkedin:before {
	    content: "\f08c";
	}
	.icon-github:before {
	    content: "\f09b";
	}
	.icon-disc:before {
	    content: "\e019";
	}
	.icon-record:before {
	    content: "\e049";
	}
	.icon-logo-sm:before {
	    content: "\e901";
	}
	.icon-logo:before {
	    content: "\e900";
	}




	body
		font-family 'Montserrat', sans-serif

	h1
	h2
	h3
	h4
	p
		margin-bottom .5em



	h1
		font-size 48px
		font-weight 100
		line-height @font-size + 20%


	h2
		font-size 40px
		font-weight 100
		line-height @font-size + 20%


	h3
		font-size 30px
		font-weight 100
		line-height @font-size + 20%


	h4
		font-size 18px
		font-weight 100
		line-height @font-size + 20%


	h5
		font-size 14px
		font-weight 100
		line-height @font-size + 20%

	p
		font-size 16px
		line-height @font-size + 50%

	a
		color black
		outline 0
		text-decoration none
		transition all .2s cubic-bezier( .4, 0, .2, 1 )
		&:hover
		&:focus
			color gray

	dt
		margin-bottom 1rem

	dl
		margin-bottom 4rem



	.heading__level-1
		font-weight bolder
		letter-spacing -4px
		line-height 1em
		margin-bottom 0
		text-transform uppercase